SubDir TOP data ;

IMAGEPATHS =
    images
    images/bonus
    images/diamond
    images/hero_dead
    images/hero_run
    images/objects
    images/particles
    images/tiles
;

for p in $(IMAGEPATHS) {
    InstallData [ Wildcard $(p) : *.png *.jpg ] : $(p) ;
}

InstallData [ Wildcard levels : *.scm ] : levels ;
InstallData [ Wildcard music : *.ogg ] : music ;
InstallData [ Wildcard controller : *.scm ] : controller ;
